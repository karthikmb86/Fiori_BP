<mvc:View
	controllerName="ns.HTML5Module.controller.employees.EmployeeList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page id="employeeListPage" title="{i18n>EmployeeList}"
		showNavButton="true"
		navButtonPress="onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<List id="employeeList" headerText="{i18n>ListOfAllEmployees}" items="{/A_BusinessPartner}">
				<items>
					<StandardListItem
						title="{BusinessPartnerFullName}"
						iconDensityAware="false"
						iconInset="false"
                        type="Navigation"
						press="onListItemPressed"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>